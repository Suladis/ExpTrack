<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4167A4BF">

    <!-- Header Button for Scan -->

    <Button
        android:id="@+id/scanButton"
        style="@style/Widget.MaterialComponents.Button.TextButton.Dialog"
        android:layout_width="395dp"
        android:layout_height="82dp"
        android:layout_alignParentTop="true"
        android:backgroundTint="#67A4BF"
        android:text="Scan"
        android:textColor="#C5BFBF"
        android:textSize="24sp"
        app:strokeColor="#FFFFFF"
        app:strokeWidth="2dp" />


    <!-- CardView for Product Name 1 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/scanButton"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <!-- Icon on the left side -->
            <ImageView
                android:id="@+id/prodname1"
                android:layout_width="90dp"
                android:layout_height="68dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="1dp"
                android:contentDescription="@string/product_image"
                android:src="@drawable/background_image" />

            <!-- Product Name Text -->
            <TextView
                android:id="@+id/product1"
                style="@style/Widget.Material3.Snackbar.TextView"
                android:layout_width="302dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/prodname1"
                android:text="Product"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- CardView for Product Name 2 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardView1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Icon on the left side -->
            <ImageView
                android:id="@+id/prodname2"
                android:layout_width="88dp"
                android:layout_height="67dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:src="@drawable/background_image" />

            <!-- Product Name Text -->
            <TextView
                android:id="@+id/product2"
                android:layout_width="302dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/prodname2"
                android:text="UPC"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <!-- CardView for Product Name 3 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardView2"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Icon on the left side -->
            <ImageView
                android:id="@+id/prodname3"
                android:layout_width="78dp"
                android:layout_height="61dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="4dp"
                android:src="@drawable/background_image" />

            <!-- Product Name Text -->
            <TextView
                android:id="@+id/product3"
                android:layout_width="302dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/prodname3"
                android:text="Date Added"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <!-- CardView for Product Name 2 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardView3"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Icon on the left side -->
            <ImageView
                android:id="@+id/prodname4"
                android:layout_width="74dp"
                android:layout_height="71dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:src="@drawable/background_image" />

            <!-- Product Name Text -->
            <TextView
                android:id="@+id/product4"
                android:layout_width="302dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/prodname4"
                android:text="Expiration Date"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- CardView for Product Name 2 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardView4"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Icon on the left side -->
            <ImageView
                android:id="@+id/prodname5"
                android:layout_width="83dp"
                android:layout_height="56dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="4dp"
                android:src="@drawable/background_image" />

            <!-- Product Name Text -->
            <TextView
                android:id="@+id/product5"
                android:layout_width="302dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/prodname5"
                android:text="ID Number"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_below="@id/cardView5"
        android:backgroundTint="#FFC400"
        android:orientation="horizontal">


        <Button
            android:id="@+id/button3"
            style="@style/Widget.MaterialComponents.Button.TextButton.Dialog"
            android:layout_width="143dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#67A4BF"
            android:text="Save Item"
            android:textColor="#C5BFBF"
            android:textSize="24sp"
            app:strokeColor="#FFFFFF"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/button4"
            style="@style/Widget.MaterialComponents.Button.TextButton.Dialog"
            android:layout_width="143dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#67A4BF"
            android:text="SAVE TAG"
            android:textColor="#C5BFBF"
            android:textSize="24sp"
            app:strokeColor="#FFFFFF"
            app:strokeWidth="2dp" />
    </LinearLayout>


</RelativeLayout>
